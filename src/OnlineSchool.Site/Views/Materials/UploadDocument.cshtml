@model OnlineSchool.Contract.Subject.SubjectModel
@using Kendo.Mvc.UI
@{
    ViewData["Title"] = "UploadDocument";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc


<script src="https://code.jquery.com/jquery-2.2.2.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2017.3.1026/js/jszip.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2017.3.1026/js/kendo.all.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2017.3.1026/js/kendo.aspnetmvc.min.js"></script>

<div style="margin-top:45px">
    <form method="post">
        <div class="row">
            <div class="col-12" style="margin-top:30px;">
                <div class="demo-section k-content">
                    <div class="form-group">

                        @(Html.Kendo().Upload()
                        .Name("file")
                        .Multiple(true)
                        .Async(a => a
                        .Save("Async_Save", "Materials")
                        .Remove("DeleteFile", "Materials")
                        .AutoUpload(true)
                    ))
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div style="margin-right: 10px;">
                <p style="padding-top: 1em; text-align: right">
                    <button type="button" style="background-color: #174873; color:white;" class="btn float-right btn-contact mt-3" asp-area="" asp-controller="Materials" asp-action="Async_Save">Save</button>
                </p>
            </div>
            <div style="margin-right: 10px; ">
                <p style="padding-top: 1em; text-align: right;">
                    <button asp-controller="Materials" asp-action="DocumentViewer" style="background-color: #174873; color:white;" type="submit" class="btn float-right btn-contact mt-3">Close</button>
                </p>
            </div>
        </div>



        @*<div class="text-right mb-5">
                <button type="submit" class='btn float-right btn-contact mt-3 mr-3' asp-area="" asp-controller="Documenti" asp-action="Index">Save</button>
            </div>
            <div class="text-right">
                <button type="submit" class="btn float-right  btn-contact mt-3 mr-3" asp-controller="Materials" asp-action="DocumentViewer">Close</button>
            </div>*@
    </form>
</div>

