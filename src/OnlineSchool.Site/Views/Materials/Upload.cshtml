<form method="post">
    <div class="row">
        <div class="col-12">
            <div class="demo-section k-content">
                <div class="form-group">
                    <label>Upload file</label>
                    @(Html.Kendo().Upload()
                        .Name("files")
                        .Multiple(true)
                        .Async(a => a
                        .Save("Async_Save", "Materials", new { Id = Model.Id })
                        .Remove("DeleteFile", "Materials", new { Id = Model.Id })
                        .AutoUpload(true)
                        .ChunkSize(11100)
                    ))
                </div>
            </div>
        </div>
    </div>
    <div class="text-right mb-5">
        <button type="submit" class='btn float-right btn-contact mt-3 mr-3' asp-area="" asp-controller="Subject" asp-action="Index" asp-route-Id="@Model.Id">Save</button>
    </div>
</form>
