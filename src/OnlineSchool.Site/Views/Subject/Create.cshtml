@model OnlineSchool.Contract.Subject.CreateSubjectModel

@{ 
    var currCulture = Context.Features.Get<IRequestCultureFeature>().RequestCulture.UICulture.Name;
}

<h6 class="page-title"> @SharedResources.NewSubject </h6>

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-7 my-4">

            <form method="post" class="mt-3" asp-controller="subject" asp-action="create">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label asp-for="@Model.Name" class="form-control-placeholder"> @SharedResources.Name </label>
                    <input asp-for="@Model.Name" class="form-control" required />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Description" class="form-control-placeholder"> @SharedResources.Description </label>
                    <textarea rows="3" asp-for="@Model.Description" class="form-control" required></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Price" class="form-control-placeholder"> @SharedResources.Price </label>
                    @(Html.Kendo().NumericTextBoxFor(m => m.Price)
                            .Culture(currCulture)
			                .Min(0)
                            .Max(99999999.99)
                            .Decimals(2)
                            .Step(0.1)
                            .Value(0.00)
                            .HtmlAttributes(new { @class = "form-control w-100" })
                            .Deferred()
                        )
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Color" class="form-control-placeholder"> @SharedResources.Color </label>
                    @(Html.Kendo().ColorPickerFor(m => m.Color)
			                .Value("#ffffff")
                            .Opacity(true)
                            .HtmlAttributes(new { @class = "form-control w-100" })
                            .Deferred()
                        )
                    <span asp-validation-for="@Model.Color" class="text-danger"></span>
                </div>

                <div class="form-group text-right">
                    <a class="btn btn-sm btn-light border" asp-controller="subject" asp-action="index">
                        <i class="fas fa-times"></i> @SharedResources.Cancel
                    </a>
                    <button type="submit" class="btn btn-sm my-btn-primary ml-2">
                        <i class="far fa-save"></i> @SharedResources.Save
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}