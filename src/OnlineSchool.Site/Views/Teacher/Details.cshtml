@model OnlineSchool.Contract.Teachers.TeacherModel

<div class="container">
    <div class="row">
        <div class="col-6" style="margin-top:40px">
            <div class="k-card mb-5">
                <div class="border-left-0" style="margin-top:15px">
                    <p class="text-darkgray" style="margin-left:20px"><i class="fa fa-user" style="color:darkgray"></i>  @Model.Name @Model.Surname</p>
                    <p class="text-darkgray" style="margin-left:20px"><i class="fa fa-comment"></i> @Model.Description</p> 
                </div>
            </div>
        </div>

        <div class="col-6" style="margin-top:30px">
            <img src="~/uploads/teachers/@Model.Id/@Model.ImagePath" style="height: 300px;"/>   
        </div>
    </div>
</div>