@model OnlineSchool.Contract.Teachers.UpdateTeacherModel

<h6 class="page-title"> @SharedResources.EditTeacher </h6>

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <form method="post" enctype="multipart/form-data" class="mt-5">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(m => m.Id)
                <div class="form-group">
                    <label asp-for="@Model.Name" class="form-control-placeholder"> @SharedResources.Name </label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Surname" class="form-control-placeholder"> @SharedResources.Surname </label>
                    <input asp-for="@Model.Surname" class="form-control" />
                    <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Gender" class="form-control-placeholder"> @SharedResources.Gender </label>
                    <select asp-for="@Model.Gender" required class="custom-select form-control cursor-pointer">
                        <option disabled selected> @SharedResources.Select @SharedResources.Gender.ToLower() </option>
                        <option value="M"> @SharedResources.Male </option>
                        <option value="F"> @SharedResources.Female </option>
                    </select>
                    <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description" class="form-control-placeholder"> @SharedResources.Description </label>
                    <textarea asp-for="@Model.Description" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"> </span>
                </div>
                <div class="form-group custom-file">
                    <label asp-for="@Model.ImageFile" class="form-control-placeholder"> @SharedResources.Image </label>
                    <input asp-for="@Model.ImageFile" class="form-control cursor-pointer" />
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"> </span>
                </div>
                @{
                    if (Model.ImagePath != null)
                    {
                        <div class="form-group text-center">
                            <img class="w-100" src="~/uploads/teachers/@Model.Id/@Model.ImagePath" alt="no-image"/>
                        </div>
                    }
                }
                <div class="form-group text-right">
                    <a class="btn btn-sm btn-light border" asp-controller="teacher" asp-action="manage">
                        <i class="fas fa-times"></i> @SharedResources.Cancel
                    </a>
                    <button type="submit" class="btn btn-sm my-btn-primary ml-2">
                        <i class="far fa-save"></i> @SharedResources.Save
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}