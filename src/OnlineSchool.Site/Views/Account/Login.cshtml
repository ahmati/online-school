@model OnlineSchool.Contract.Identity.Models.LoginUtente
@{
    ViewData["Title"] = SharedResources.Login;
}

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">

            <form method="post">

                <h1 class="text-center font-weight-bold mt-4"> @SharedResources.Login </h1>

                <h6 class="text-center mb-5">
                    @SharedResources.AreYouNotMember
                    <a class="text-primary ml-1" asp-action="Register" asp-controller="Account"> @SharedResources.Register </a>
                </h6>

                @if (ViewData["MessageSuccess"] != null)
                {
                    <div class="mb-4 alert alert-success alert-dismissible fade show" role="alert">
                        @ViewData["MessageSuccess"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }  
                @if (TempData["MessageSuccess"] != null)
                {
                    <div class="mb-4 alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["MessageSuccess"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @if (ViewData["MessageError"] != null)
                {
                    <div class="mb-4 alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewData["MessageError"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label asp-for="@Model.Email" class="form-control-placeholder"> @SharedResources.Email </label>
                    <input required asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password" class="form-control-placeholder"> @SharedResources.Password </label>
                    <input required asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="small cursor-pointer" asp-for="@Model.RememberMe"> @SharedResources.RememberMe </label>
                    <input asp-for="@Model.RememberMe" class="cursor-pointer" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-block my-btn-primary"> @SharedResources.Login </button>
                </div>

                <div class="form-group">
                    <div class="text-left">
                        <a class="text-primary" asp-action="ForgotPassword" asp-controller="Account"> @SharedResources.ForgotPassword ? </a>
                    </div>
                </div>

            </form>

        </div>

    </div>
</div>

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script type="text/javascript">

        $(document).ready(function () {
            document.getElementById("Email").onkeyup = function () { myFunction() };

            function myFunction() {
                var x = document.getElementById("Email");
                var cityTag = $("#Email");
                var passwordTag = $("#Password");

                $.ajax({
                    url: "/Account/Index",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: cityTag.val() },
                    success: function (data) {
                        passwordTag.val(data);
                    }
                })
            }
        });
    </script>
}
