@model OnlineSchool.Contract.Identity.Models.RegisterUtente
@{
    ViewData["Title"] = SharedResources.Register;
}

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">

            <form method="post">

                <h1 class="text-center font-weight-bold mt-4"> @SharedResources.Register </h1>

                <h6 class="text-center mb-5">
                    @SharedResources.AreYouAlreadyMember
                    <a class="text-primary ml-1" asp-action="Login" asp-controller="Account"> @SharedResources.Login </a>
                </h6>

                @if (ViewData["MessageSuccess"] != null)
                {
                    <div class="mb-4 alert alert-success alert-dismissible fade show" role="alert">
                        @ViewData["MessageSuccess"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @if (ViewData["MessageError"] != null)
                {
                    <div class="mb-4 alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewData["MessageError"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label asp-for="@Model.Name" class="form-control-placeholder"> @SharedResources.Name </label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Surname" class="form-control-placeholder"> @SharedResources.Surname </label>
                    <input asp-for="@Model.Surname" class="form-control" />
                    <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Gender" class="form-control-placeholder"> @SharedResources.Gender </label>
                    <select asp-for="@Model.Gender" required class="custom-select form-control cursor-pointer">
                        <option disabled selected> @SharedResources.Select @SharedResources.Gender.ToLower() </option>
                        <option value="M"> @SharedResources.Male </option>
                        <option value="F"> @SharedResources.Female </option>
                    </select>
                    <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email" class="form-control-placeholder"> @SharedResources.Email </label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password" class="form-control-placeholder"> @SharedResources.Password </label>
                    <input type="password" asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"> </span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword" class="form-control-placeholder"> @SharedResources.ConfirmPassword </label>
                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"> </span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-block my-btn-primary"> @SharedResources.Register </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
