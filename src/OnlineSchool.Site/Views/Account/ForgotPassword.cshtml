@model OnlineSchool.Contract.Identity.Models.ForgotPassword
@{
    ViewData["Title"] = SharedResources.ForgotPassword;
}

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">

            <form method="post">

                <h1 class="text-center font-weight-bold my-5"> @SharedResources.ResetPassword </h1>

                @if (ViewData["MessageSuccess"] != null)
                {
                    <div class="mb-4 alert alert-success alert-dismissible fade show" role="alert">
                        @ViewData["MessageSuccess"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @if (ViewData["MessageError"] != null)
                {
                    <div class="mb-4 alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewData["MessageError"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <div class="form-group ">
                    <label asp-for="@Model.Email" class="form-control-placeholder"> @SharedResources.Email </label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-block my-btn-primary"> @SharedResources.ResetPassword </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


